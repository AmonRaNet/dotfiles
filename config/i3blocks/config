command=$SCRIPT_DIR/$BLOCK_NAME/$BLOCK_NAME
separator=true
separator_block_width=35
markup=pango

[iface]
label=NETWORK:
color=#00FF00
interval=10

[iface]
IFACE=wlp0s20f3
label=WIFI:
interval=10

[volume]
LABEL=SOUND:
color=#00FFFF
interval=5
signal=10
STEP=5%

[battery2]
interval=30

[calendar]
DATEFMT=+DATE %a %Y-%m-%d
interval=30

[time]
command=date '+TIME %H:%M'
interval=5

[kbdd_layout]
label=LAYOUT:
color=#ff9900
interval=persist
separator_block_width=5

[keyindicator]
KEY=CAPS
interval=5
signal=11
separator=false
separator_block_width=5

[keyindicator]
KEY=NUM
interval=5
separator_block_width=5
signal=11

[separator]
command=echo " "
interval=once
